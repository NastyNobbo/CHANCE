<Window x:Class="ChatServer.MainWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" Title="Сервер чата" Height="600" Width="900">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <GroupBox Header="Клиенты" Height="200" Margin="0,0,0,10">
            <ListBox x:Name="ClientList" DisplayMemberPath="Name"/>
        </GroupBox>

        <GroupBox Header="Лог сервера" Grid.Row="1">
            <TextBox x:Name="LogTextBox" IsReadOnly="True" TextWrapping="Wrap" AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
        </GroupBox>
    </Grid>
</Window>