<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Wocha"
        Height="600"
        Width="800"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#FF1A1A1A">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Экран входа -->
        <Grid x:Name="LoginPanel" Visibility="Visible">
            <Viewbox Stretch="Uniform" StretchDirection="Both">
                <Border CornerRadius="15" Background="#FF2B2B2B" Padding="20" Width="400">
                    <StackPanel>
                        <TextBlock Text="Авторизация"
                                   FontSize="28"
                                   FontWeight="Bold"
                                   Margin="0,0,0,20"
                                   HorizontalAlignment="Center"
                                   Foreground="#FF02C3BA"/>

                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Логин:"
                                       FontFamily="Arial Black"
                                       FontSize="12"
                                       Foreground="#FF02C3BA"/>
                            <TextBox x:Name="txtLogin"
                                     Margin="0,5,0,0"
                                     Padding="10"
                                     Foreground="#FF02C3BA"
                                     Background="#FF1B1B1B"
                                     FontSize="12"
                                     FontFamily="Arial Black"
                                     BorderBrush="#FF02C3BA"/>
                        </StackPanel>

                        <StackPanel Margin="0,0,0,10">
                            <TextBlock Text="Пароль:"
                                       FontFamily="Arial Black"
                                       FontSize="12"
                                       Foreground="#FF02C3BA"/>
                            <PasswordBox x:Name="txtPassword"
                                         Margin="0,5,0,0"
                                         Padding="10"
                                         Foreground="#FF02C3BA"
                                         Background="#FF1B1B1B"
                                         FontSize="12"
                                         FontFamily="Arial Black"
                                         BorderBrush="#FF02C3BA"/>
                        </StackPanel>

                        <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button x:Name="btnLogin"
                                    Content="Войти"
                                    Click="btnLogin_Click"
                                    Foreground="#FF02C3BA"
                                    Background="#FF1B1B1B"
                                    FontSize="12"
                                    FontFamily="Arial Black"
                                    BorderBrush="#FF02C3BA"
                                    Padding="10"
                                    Margin="0,0,5,0"/>
                            <Button x:Name="btnOpenRegister"
                                    Content="Регистрация"
                                    Click="btnOpenRegister_Click"
                                    Foreground="#FF02C3BA"
                                    Background="#FF1B1B1B"
                                    FontSize="12"
                                    FontFamily="Arial Black"
                                    BorderBrush="#FF02C3BA"
                                    Padding="10"/>
                        </WrapPanel>

                        <WrapPanel HorizontalAlignment="Center" Margin="0,10,0,0">
                            <Button Content="Сбросить пароль"
                                    Click="btnResetPassword_Click"
                                    Foreground="#FF02C3BA"
                                    Background="#FF1B1B1B"
                                    FontSize="12"
                                    FontFamily="Arial Black"
                                    BorderBrush="#FF02C3BA"
                                    Padding="10"
                                    Margin="0,0,5,0"/>
                            <Button Content="Настройки подключения"
                                    Click="btnConnectionSettings_Click"
                                    Foreground="#FF02C3BA"
                                    Background="#FF1B1B1B"
                                    FontSize="12"
                                    FontFamily="Arial Black"
                                    BorderBrush="#FF02C3BA"
                                    Padding="10"/>
                        </WrapPanel>
                    </StackPanel>
                </Border>
            </Viewbox>
        </Grid>

        <!-- Экран чата -->
        <Grid x:Name="ChatGrid" Grid.Row="0" Visibility="Collapsed">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="6*"/>
            </Grid.ColumnDefinitions>

            <!-- Пользователи -->
            <Border Grid.Column="0"
                    Grid.Row="0"
                    Margin="0,0,10,0"
                    CornerRadius="5"
                    Background="#FF2B2B2B"
                    BorderBrush="#FF02C3BA"
                    BorderThickness="1">
                <DockPanel>
                    <TextBlock Text="Пользователи"
                               Foreground="#FF02C3BA"
                               FontWeight="Bold"
                               Margin="10,5"
                               DockPanel.Dock="Top"/>
                    <ListBox x:Name="usersList"
                             Foreground="#FF02C3BA"
                             Background="#FF2B2B2B"
                             FontSize="12"
                             FontFamily="Arial Black"
                             BorderBrush="#FF02C3BA"/>
                </DockPanel>
            </Border>

            <!-- Группы -->
            <Border Grid.Column="1"
                    Grid.Row="0"
                    Background="#FF2B2B2B"
                    BorderBrush="#FF02C3BA"
                    Margin="0,0,10,0"
                    CornerRadius="5"
                    BorderThickness="1">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <TextBlock Text="Группы"
                                   Foreground="#FF02C3BA"
                                   FontWeight="Bold"
                                   Margin="10,5"/>
                        <ListBox x:Name="groupList"
                                 Foreground="#FF02C3BA"
                                 Background="#FF2B2B2B"
                                 FontSize="12"
                                 FontFamily="Arial Black"
                                 BorderBrush="#FF02C3BA"/>
                        <Button x:Name="btnCreateGroup"
                                Click="btnCreateGroup_Click"
                                Content="Создать группу"
                                Margin="10,5,10,0"
                                Foreground="#FF02C3BA"
                                Background="#FF1B1B1B"
                                FontSize="12"
                                FontFamily="Arial Black"
                                BorderBrush="#FF02C3BA"
                                Padding="10"
                                FontWeight="Bold"/>
                        <Button x:Name="btnInviteToGroup"
                                Click="btnInviteToGroup_Click"
                                Content="Пригласить в группу"
                                Margin="10,5,10,0"
                                Foreground="#FF02C3BA"
                                Background="#FF1B1B1B"
                                FontSize="12"
                                FontFamily="Arial Black"
                                BorderBrush="#FF02C3BA"
                                Padding="10"
                                FontWeight="Bold"/>
                        <Button Content="Выйти из учётной записи"
                                Click="btnLogout_Click"
                                Margin="10,10,10,10"
                                Foreground="#FF02C3BA"
                                Background="#FF1B1B1B"
                                FontSize="12"
                                FontFamily="Arial Black"
                                BorderBrush="#FF02C3BA"
                                Padding="10"
                                FontWeight="Bold"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Чат -->
            <Border Grid.Column="2"
                    Grid.Row="0"
                    CornerRadius="5"
                    BorderThickness="1">
                <ListBox x:Name="chatList"
                         Foreground="#FF02C3BA"
                         Background="#FF2B2B2B"
                         FontSize="12"
                         FontFamily="Arial Black"
                         BorderBrush="#FF02C3BA"/>
            </Border>

            <!-- Ввод сообщения -->
            <Grid Grid.Column="2" Grid.Row="1" Margin="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBox x:Name="txtMessage"
                         Height="35"
                         KeyDown="txtMessage_KeyDown"
                         IsEnabled="False"
                         Margin="0,0,5,0"
                         Padding="10"
                         Foreground="#FF02C3BA"
                         Background="#FF2B2B2B"
                         FontSize="12"
                         FontFamily="Arial Black"
                         BorderBrush="#FF02C3BA"
                         BorderThickness="1"
                         VerticalAlignment="Center"
                         HorizontalAlignment="Stretch"/>
                <Button x:Name="btnSend"
                        Content="Отправить"
                        IsEnabled="False"
                        Click="btnSend_Click"
                        Width="100"
                        Foreground="#FF02C3BA"
                        Background="#FF1B1B1B"
                        FontSize="12"
                        FontFamily="Arial Black"
                        BorderBrush="#FF02C3BA"
                        Padding="10"
                        FontWeight="Bold"
                        Grid.Column="1"
                        VerticalAlignment="Center"/>
            </Grid>
        </Grid>
    </Grid>
</Window>