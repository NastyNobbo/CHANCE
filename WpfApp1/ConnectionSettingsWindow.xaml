<Window x:Class="WpfApp1.ConnectionSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки подключения" Height="240" Width="300"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="20" VerticalAlignment="Center">
        <Label Content="IP адрес:" />
        <ComboBox x:Name="cbIp" IsEditable="True" Margin="0,0,0,10"/>

        <Label Content="Порт:" />
        <ComboBox x:Name="txtPort" IsEditable="True" Margin="0,0,0,10"/>

        <Button Content="Сохранить" Click="BtnSave_Click" HorizontalAlignment="Center" Width="100"/>
        <CheckBox x:Name="chkUseAlways" Content="Использовать всегда" Margin="0,10,0,0"/>
    </StackPanel>
</Window>
