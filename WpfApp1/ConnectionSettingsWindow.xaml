<Window x:Class="WpfApp1.ConnectionSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Настройки подключения" Height="360" Width="450"
        WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="#FF1A1A1A">

    <Grid Margin="20">
        <Border CornerRadius="15" Background="#FF2B2B2B" Padding="20">
            <StackPanel>
                <TextBlock Text="Настройки подключения" FontSize="28" FontWeight="Bold" Margin="0,0,0,20" 
                           HorizontalAlignment="Center" Foreground="#FF02C3BA" />

                <Label Content="IP адрес:" FontFamily="Arial Black" FontSize="12" Foreground="#FF02C3BA"/>
                <ComboBox x:Name="cbIp" IsEditable="True" Margin="0,0,0,10" 
                           Background="#FF1B1B1B" 
                           BorderBrush="#FF02C3BA" />

                <Label Content="Порт:" FontFamily="Arial Black" FontSize="12" Foreground="#FF02C3BA"/>
                <ComboBox x:Name="txtPort" IsEditable="True" Margin="0,0,0,10" 
                           Background="#FF1B1B1B" 
                           BorderBrush="#FF02C3BA" />

                <Button Content="Сохранить" Click="BtnSave_Click" HorizontalAlignment="Center" 
                        Width="100" Foreground="#FF02C3BA" Background="#FF1B1B1B" 
                        FontSize="12" FontFamily="Arial Black" BorderBrush="#FF02C3BA" 
                        Padding="10" Margin="0,10,0,0"/>

                <CheckBox x:Name="chkUseAlways" Content="Использовать всегда" 
                          Margin="0,10,0,0" Foreground="#FF02C3BA" 
                          Background="#FF1B1B1B" FontSize="12" FontFamily="Arial Black"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
