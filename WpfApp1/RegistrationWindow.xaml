<Window x:Class="WpfApp1.RegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Регистрация" Height="280" Width="320" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="10" VerticalAlignment="Center">
        <TextBlock Text="Имя пользователя:" />
        <TextBox x:Name="txtRegName" Margin="0,5,0,10"/>

        <TextBlock Text="Логин:" />
        <TextBox x:Name="txtRegLogin" Margin="0,5,0,10"/>

        <TextBlock Text="Пароль:" />
        <PasswordBox x:Name="txtRegPassword" Margin="0,5,0,10"/>

        <TextBlock Text="Повторите пароль:" />
        <PasswordBox x:Name="txtRepeatRegPassword" Margin="0,5,0,10"/>

        <Button Content="Зарегистрироваться" Width="160" HorizontalAlignment="Center" Click="btnRegister_Click"/>
    </StackPanel>
</Window>
