<Window x:Class="WpfApp1.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сброс пароля" Height="360" Width="400" WindowStartupLocation="CenterOwner" ResizeMode="NoResize" Background="#FF1A1A1A">

    <Grid Margin="20">
        <Border CornerRadius="15" Background="#FF2B2B2B" Padding="20">
            <StackPanel>
                <TextBlock Text="Сброс пароля" FontSize="28" FontWeight="Bold" Margin="0,0,0,20" 
                           HorizontalAlignment="Center" Foreground="#FF02C3BA" />

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Логин" FontFamily="Arial Black" FontSize="12" Foreground="#FF02C3BA"/>
                    <TextBox x:Name="txtLogin" Margin="0,5,0,0" Padding="10" 
                             Foreground="#FF02C3BA" Background="#FF1B1B1B" 
                             FontSize="12" FontFamily="Arial Black" BorderBrush="#FF02C3BA"/>
                </StackPanel>

                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="Новый пароль" FontFamily="Arial Black" FontSize="12" Foreground="#FF02C3BA"/>
                    <PasswordBox x:Name="txtNewPassword" Margin="0,5,0,0" Padding="10"
                                 Foreground="#FF02C3BA" Background="#FF1B1B1B" 
                                 FontSize="12" FontFamily="Arial Black" BorderBrush="#FF02C3BA"/>
                </StackPanel>

                <Button Content="Сбросить пароль" Width="140" HorizontalAlignment="Center" 
                        Click="btnResetPassword_Click" Foreground="#FF02C3BA" 
                        Background="#FF1B1B1B" FontSize="12" FontFamily="Arial Black" 
                        BorderBrush="#FF02C3BA" Padding="10" Margin="0,10,0,0"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
