<Window x:Class="WpfApp1.ResetPasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сброс пароля" Height="200" Width="300" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="10">
        <TextBlock Text="Логин:" />
        <TextBox x:Name="txtLogin" Margin="0,5,0,10"/>
        <TextBlock Text="Новый пароль:" />
        <PasswordBox x:Name="txtNewPassword" Margin="0,5,0,10"/>
        <Button Content="Сбросить пароль" Width="140" HorizontalAlignment="Center" Click="btnResetPassword_Click"/>
    </StackPanel>
</Window>
