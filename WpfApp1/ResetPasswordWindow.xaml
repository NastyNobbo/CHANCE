<Window x:Class="WpfApp1.ResetPasswordWindow"
xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Сброс пароля" Height="180" Width="320" WindowStartupLocation="CenterOwner" ResizeMode="NoResize">
    <StackPanel Margin="10" VerticalAlignment="Center">
        <TextBlock Text="Имя пользователя:" />
        <TextBox x:Name="txtUsername" Margin="0,5,0,10" />
        <TextBlock Text="Новый пароль:" />
        <PasswordBox x:Name="txtNewPassword" Margin="0,5,0,10" />
        <Button Content="Сбросить пароль" Width="120" HorizontalAlignment="Center" Click="btnResetPassword_Click" />
    </StackPanel>
</Window>